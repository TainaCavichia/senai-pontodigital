            <div id="imag">
                <img src="images/banner ponto digital.png" alt="" class="imagem1">
                <img src="images/banner ponto digital - Copia.png" alt="" class="imagem1 w3-animate-top">
                <img src="images/banner ponto digital - Copia (2).png" alt="" class="imagem1">
            </div>
            <p id="logo">Ponto digital</p>
        </div>
    </header>
    <script>
    var myIndex = 0;
    carousel();

    function carousel() {
        var i;
        var x = document.getElementsByClassName("imagem1");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        myIndex++;
        if (myIndex > x.length) { myIndex = 1 }
        x[myIndex - 1].style.display = "block";
        setTimeout(carousel, 5000);
    }
</script>

