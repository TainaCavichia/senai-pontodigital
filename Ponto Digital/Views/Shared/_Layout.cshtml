                            <li class="menu-items"> <a href='@Url.Action("Index","Home")#contatos'>Contatos</a> </li>
                            <li class="menu-items"> <a href='@Url.Action("Index","Home")#cadastro'>Cadastro</a> </li>
                        
                        @if (string.IsNullOrEmpty(user))
                        {
                            <li class="menu-items"><a href='@Url.Action("Index","Home")#cadastro'>Login</a> </li> 
                        }else{
                            <li><a id="bt_logout" asp-controller="Home" asp-action="Logout">Logout</a></li>
                        }
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="open-menu">
