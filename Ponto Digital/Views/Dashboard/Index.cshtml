@model Ponto_Digital.ViewModel.ComentarioViewModel

@{
var user = (string) ViewData["User"];
var tipo = (string) ViewData["Tipo"];
}
<section id="listagemComentarios">
    <h2>Últimos comentários</h2>
    <div class="COMENTARIO">
    @foreach (var item in Model.UltimosComentarios)
    {
        <div class="caixa">
        <br>
        <p class="nome">@item.NomeUsuario</p>
        <p>@item.Mensagem</p>
        <p>@item.DataComentario</p>
        <br>
        </div>
    }
    </div>
</section>
<section>
    <h2>Últimos usuários cadastrados</h2>
    <div class="COMENTARIO">
    @foreach (var item in Model.UltimosUsuarios)
    {
        <div class="caixa">
            <br>
            <p>Nome: @item.Nome</p>
            <p>Email: @item.Email</p>
            <p>Senha: @item.Senha</p>
            <p>Data de Nascimento: @item.DataDeNascimento</p>
            <p>Tipo de Usuário: @item.TipoDeUsuario</p>
            <br>
        </div>
    }
    </div>
</section>
<section>
    <h2>Quantidade de usuários cadastrados</h2>
        <p class="numero">@Model.QuantidadeUsuarios</p>
</section>
<section>
    <h2>Quantidade de comentários</h2>
        <p class="numero">@Model.QuantidadeComentarios</p>
</section>
<section>
    <h2>Quantidade de comentários aprovados</h2>
        <p class="numero">@Model.QuantidadeAprovados</p>
</section>
<section>
    <h2>Quantidade de comentários rejeitados</h2>
        <p class="numero">@Model.QuantidadeRejeitados</p>
</section>